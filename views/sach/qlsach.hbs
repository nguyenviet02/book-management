<html lang='en'>
  <head>
    <meta charset='UTF-8' />
    <meta name='viewport' content='width=device-width, initial-scale=1.0' />
    <title>QL NHÀ SÁCH</title>
    <link
      href='https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css'
      rel='stylesheet'
      integrity='sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN'
      crossorigin='anonymous'
    />
    <link rel='stylesheet' href='https://cdn.jsdelivr.net/npm/bootstrap-icons@1.3.0/font/bootstrap-icons.css' />
    <link rel='stylesheet' href='/css/sach/qlsach.css' />
  </head>
  <body>
    <h1 id='title'>Quản lý thông tin sách</h1>
    <section id='book-management'>
      <div id='book-form'>
        <div id='main-form'>
          <div id='left'>
            <div class='mb-3 form-item'>
              <label for='bookId' class='form-label'>Mã Sách</label>
              <input type='text' class='form-control' id='bookId' placeholder='Nhập  mã sách' />
            </div>
            <div class='mb-3 form-item'>
              <label for='bookName' class='form-label'>Tên Sách</label>
              <input type='text' class='form-control' id='bookName' placeholder='Nhập tên sách' />
            </div>
            <div class='mb-3 form-item'>
              <label for='bookAuthor' class='form-label'>Tác Giả</label>
              <input type='text' class='form-control' id='bookAuthor' placeholder='Nhập  tác giả' />
            </div>
          </div>
          <div id='right'>
            <div class='mb-3 form-item'>
              <label for='bookCate' class='form-label'>Thể loại</label>
              <select id='bookCate' class='form-select' aria-label='Chọn thể loại'>
                <option selected>Chọn thể loại</option>
                <option value='1'>One</option>
                <option value='2'>Two</option>
                <option value='3'>Three</option>
              </select>
            </div>
            <div class='mb-3 form-item'>
              <label for='bookPublisher' class='form-label'>Nhập xuất bản</label>
              <select id='bookPublisher' class='form-select' aria-label='Nhập xuất bản'>
                <option selected>Chọn nhà xuất bản</option>
                <option value='1'>One</option>
                <option value='2'>Two</option>
                <option value='3'>Three</option>
              </select>
            </div>
          </div>
        </div>
        <div id='btn-list'>
          <button type='button' class='btn btn-primary'>Thêm Sách</button>
          <button type='button' class='btn btn-secondary'>Lưu sách</button>
          <button type='button' class='btn btn-success'>Cập nhật sách</button>
        </div>
      </div>
      <div id='book-list'>
        <table class='table table-bordered'>
          <thead>
            <tr>
              <th scope='col'>Mã Sách</th>
              <th scope='col'>Tên Sách</th>
              <th scope='col'>Tác giả</th>
              <th scope='col'>Đơn giá</th>
              <th scope='col'>Nhà xuất bản</th>
              <th scope='col'>Thể loại</th>
              <th scope='col'>Thực hiên</th>
            </tr>
          </thead>
          <tbody>
            <tr>
              <th scope='row'>1</th>
              <td>Mark</td>
              <td>Otto</td>
              <td>@mdo</td>
              <td>Kim Dong</td>
              <td>Anime</td>
              <td>
                <button>
                  <img src='/img/icon-bin.svg' alt='' />
                </button>
              </td>
            </tr>
            <tr>
              <th scope='row'>1</th>
              <td>Mark</td>
              <td>Otto</td>
              <td>@mdo</td>
              <td>Kim Dong</td>
              <td>Anime</td>
              <td>
                <button>
                  <img src='/img/icon-bin.svg' alt='' />
                </button>
              </td>
            </tr>
          </tbody>
        </table>
      </div>
    </section>
    <script
      src='https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js'
      integrity='sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL'
      crossorigin='anonymous'
    ></script>
  </body>
</html>