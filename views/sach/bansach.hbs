<html lang='en'>
  <head>
    <meta charset='UTF-8' />
    <meta name='viewport' content='width=device-width, initial-scale=1.0' />
    <title>QL NHÀ SÁCH</title>
    <link
      href='https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css'
      rel='stylesheet'
      integrity='sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN'
      crossorigin='anonymous'
    />
    <link rel='stylesheet' href='https://cdn.jsdelivr.net/npm/bootstrap-icons@1.3.0/font/bootstrap-icons.css' />
    <link rel='stylesheet' href='/css/sach/bansach.css' />
  </head>
  <body>
    <h1 id='title'>Phiếu Bán Sách</h1>
    <section id='book-management'>
      <div id='section1'>
        <table class='table table-bordered'>
          <thead>
            <tr>
              <th scope='col'>Mã Sách</th>
              <th scope='col'>Tên Sách</th>
            </tr>
          </thead>
          <tbody>
            <tr>
              <th scope='row'>1</th>
              <td>Tài ăn nói của người đàn ông</td>
            </tr>
          </tbody>
        </table>
      </div>
      <div id='section2'>
        <div class='top'>
          <div class='table-top'>
            <table class='table table-bordered align-middle'>
              <thead>
                <tr>
                  <th scope='col'>Mã Sách</th>
                  <th class='text-center' scope='col'>Tên Sách</th>
                  <th scope='col'>Số lượng</th>
                  <th scope='col'>Đơn giá nhập</th>
                  <th scope='col'>Tổng tiền</th>
                  <th scope='col'>Thực hiện</th>
                </tr>
              </thead>
              <tbody>
                <tr>
                  <th scope='row'>1</th>
                  <td>Tài ăn nói của người đàn ông</td>
                  <td>1</td>
                  <td>2</td>
                  <td>3</td>
                  <td>
                    <button>
                      <img src='/img/icon-bin.svg' alt='' />
                    </button>
                  </td>
                </tr>
              </tbody>
            </table>

          </div>
          <div class='action'>
            <input type='text' class='form-control' id='bookName' placeholder='Nhập tên sách' />
            <input type='text' class='form-control' id='bookPrice' placeholder='Nhập giá' />
            <button type='button' class='btn btn-primary'>Thêm Sách</button>
          </div>
        </div>
        <div class='bottom'>
          <table class='table table-bordered'>
            <thead>
              <tr>
                <th scope='col'>Mã hóa đơn</th>
                <th scope='col'>Mã khách hàng</th>
                <th scope='col'>Ngày lập</th>
                <th scope='col'>Tổng tiền</th>
                <th scope='col'>Thực hiện</th>
              </tr>
            </thead>
            <tbody>
              <tr>
                <th scope='row'>1</th>
                <td>0000</td>
                <td>7/12/2023 12:00:00 AM</td>
                <td>293000</td>
                <td>
                  <button>
                    <img src='/img/icon-bin.svg' alt='' />
                  </button>
                </td>
              </tr>
              <tr>
                <th scope='row'>1</th>
                <td>0000</td>
                <td>7/12/2023 12:00:00 AM</td>
                <td>293000</td>
                <td>
                  <button>
                    <img src='/img/icon-bin.svg' alt='' />
                  </button>
                </td>
              </tr>
            </tbody>
          </table>
          <div class='btn-list'>
            <select id='bookCate' class='form-select' aria-label='Chọn thể loại'>
              <option selected>Chọn khách hàng</option>
              <option value='1'>One</option>
              <option value='2'>Two</option>
              <option value='3'>Three</option>
            </select>
            <button type='button' class='btn btn-primary'>Tạo hóa đơn mới</button>
            <button type='button' class='btn btn-secondary'>Nhập hóa đơn</button>
            <button type='button' class='btn btn-success'>Lưu hóa đơn</button>
          </div>
        </div>
      </div>
    </section>
    <script
      src='https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js'
      integrity='sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL'
      crossorigin='anonymous'
    ></script>
  </body>
</html>