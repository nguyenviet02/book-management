<html lang='en'>
  <head>
    <meta charset='UTF-8' />
    <meta name='viewport' content='width=device-width, initial-scale=1.0' />
    <title>QL NHÀ SÁCH</title>
    <link
      href='https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css'
      rel='stylesheet'
      integrity='sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN'
      crossorigin='anonymous'
    />
    <link rel='stylesheet' href='https://cdn.jsdelivr.net/npm/bootstrap-icons@1.3.0/font/bootstrap-icons.css' />
    <link rel='stylesheet' href='/css/sach/timkiemsach.css' />
  </head>
  <body>
    <h1 id='title'>Tìm kiếm sách</h1>
    <section id='book-management'>
      <div id='book-form'>
        <div class='book-name'>
          <select id='bookCate' class='form-select' aria-label='Tên sách'>
            <option selected>Tên Sách</option>
            <option value='1'>One</option>
            <option value='2'>Two</option>
            <option value='3'>Three</option>
          </select>
        </div>
        <div class='search-bar'>
          <img src='img/icon-search.svg' alt='Search' />
          <input type='text' class='form-control' id='bookId' placeholder='Nhập  mã sách' />
          <button>
            <img src='img/icon-arrow.svg' alt='Search' />
          </button>
        </div>
      </div>
      <div id='book-list'>
        <table class='table table-bordered'>
          <thead>
            <tr>
              <th scope='col'>Mã Sách</th>
              <th scope='col'>Tên Sách</th>
              <th scope='col'>Tác giả</th>
              <th scope='col'>Nhà xuất bản</th>
              <th scope='col'>Thể loại</th>
            </tr>
          </thead>
          <tbody>
            <tr>
              <th scope='row'>1</th>
              <td>Mark</td>
              <td>Otto</td>
              <td>@mdo</td>
              <td>Anime</td>
            </tr>
            <tr>
              <th scope='row'>1</th>
              <td>Mark</td>
              <td>Otto</td>
              <td>@mdo</td>
              <td>Kim Dong</td>
            </tr>
          </tbody>
        </table>
      </div>
    </section>
    <script
      src='https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js'
      integrity='sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL'
      crossorigin='anonymous'
    ></script>
  </body>
</html>